@page "/"
@using ProjectBank.Core
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject HttpClient _http
@inject ILocalStorageService _localStore

<PageTitle>Project Bank</PageTitle>
<Content>
    <Padding>
        <AuthorizeView>
            <Authorized>
                <h1>Hello, @context.User.Identity?.Name!</h1>
                <p>Showing all posts</p>
                @if (Posts != null)
                {
                    if (Posts?.Count == 0)
                    {
                        <p>No posts to show</p>
                    }
                    else
                    {
                        @foreach (var post in Posts)
                        {
                            if (post.PostState.Equals(PostState.Active))
                            {
                                <PostContainer Title="@post.Title" Content="@post.Content" SupervisorId="@post.UserOid"
                    Tags="@post.Tags" DateAdded="@post.DateAdded" PostID="@post.Id">
                                </PostContainer>
                            }
                        }
                    }
                }
                else
                {
                    <p>Loading...</p>
                }
            </Authorized>
            <NotAuthorized>
                <h1>Welcome to project bank, please log in <a href="authentication/login">here</a></h1>
            </NotAuthorized>
        </AuthorizeView>
    </Padding>
</Content>

@code
{
    public List<String>? Tags = new List<string>() { "Biology", "Chemistry" }; //test

    private List<PostDetailsDto>? Posts;

    private UserDetailsDto currentUser { get; set; }

    protected override async Task OnInitializedAsync()
    {
        currentUser = await _localStore.GetItemAsync<UserDetailsDto>("user");
        try
        {
            Posts = await _http.GetFromJsonAsync<List<PostDetailsDto>>("api/Post");
            Posts = Posts?.OrderByDescending(dto => dto.DateAdded).ToList();
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}